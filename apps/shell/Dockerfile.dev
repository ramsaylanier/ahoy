# Use Node.js 22 Alpine as base
FROM node:22-alpine

# Install essential tools for development
RUN apk add --no-cache \
    git \
    curl \
    wget \
    bash \
    vim \
    nano \
    htop \
    && rm -rf /var/cache/apk/*

# Install global npm packages for development
RUN npm install -g \
    @angular/cli@20 \
    typescript@~5.8.2 \
    nodemon \
    ts-node

# Set working directory
WORKDIR /app

# Copy the devspace start script
COPY devspace_start.sh /app/devspace_start.sh
RUN chmod +x /app/devspace_start.sh

# Create a non-root user for better security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

# Change ownership of the working directory and script
RUN chown -R nodejs:nodejs /app

# Switch to non-root user
USER nodejs

# Expose port
EXPOSE 3000

# Default command
CMD ["sh"] 